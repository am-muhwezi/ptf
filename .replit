localPort = 5000
externalPort = 8080

[workflows]
runButton = "Run Both Servers"

[[workflows.workflow]]
name = "Run Both Servers"
author = 43059492
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt && python manage.py migrate && python manage.py runserver 0.0.0.0:5000"