modules = ["nodejs-20", "python-3.12", "web"]
run = "cd frontend && npm install && npm run dev & cd backend && python -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt && python manage.py migrate && python manage.py runserver 0.0.0.0:5000 & wait"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run script"]

[[ports]]
localPort = 4028
externalPort = 80

